<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="vertical"
        >
    <LinearLayout
            android:id="@+id/llDownLoadInstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:background="@drawable/backgroud_white_radius_6"
    >
        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center"
                android:textColor="@color/text_color_light"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_15"
                android:text="下载完成"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/color_333333"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="@dimen/dp_41"
                android:text="@string/text_install"
                android:layout_marginTop="@dimen/dp_15"
        />

        <Button
                android:id="@+id/btnInstallOK"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="去开启"
                android:textStyle="bold"
                android:padding="@dimen/dp_10"
                android:background="@drawable/backgroud_e74723_radius_4"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_30"
        />


    </LinearLayout>


</RelativeLayout>